  "definitions": {
    "Product": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "example": "Product name"
        },
        "description": {
          "type": "string",
          "example": "Product description"
        },
        "price": {
          "type": "number",
          "example": 0
        }
      },
      "required": ["name", "description", "price"]
    },
    "Order": {
      "type": "object",
      "properties": {
        "user": {
          "type": "string",
          "example": "User ID"
        },
        "product": {
          "type": "string",
          "example": "Product ID"
        },
        "quantity": {
          "type": "number",
          "example": 1
        },
        "date": {
          "type": "string",
          "example": "11/1/2023, 04:00:38 PM"
        }
      },
      "required": ["user", "product", "quantity", "date"]
    },
    "ErrorMessage": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string",
          "example": "Error message"
        }
      }
    },
    "SuccessMessage": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string",
          "example": "Success message"
        }
      }
    }
  },
  "parameters": {
    "ProductBody": {
      "name": "obj",
      "in": "body",
      "description": "The new product object",
      "schema": {
