{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },

  "include": [
    "src/**/*",
    "src/**/*.ts",
    "src/**/*.ejs",
    "src/**/*.css",
    "src/**/*.json"
    // Add other file extensions as needed
  ],
  "exclude": ["node_modules", "**/*.test.ts", "sr"]
}
